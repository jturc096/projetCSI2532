<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>DataSourceLoader</servlet-name>
        <servlet-class>model.db.DataSourceLoader</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>DataSourceLoader</servlet-name>
        <url-pattern>/DataSourceLoader</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>servlets.FrontController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/loginC</url-pattern>
        <url-pattern>/account_summary</url-pattern>
        <url-pattern>/account_activity</url-pattern>
        <url-pattern>/customer_payment</url-pattern>
        <url-pattern>/loginE</url-pattern>
        <url-pattern>/employee_data</url-pattern>
        <url-pattern>/branche_data</url-pattern>
        <url-pattern>/accountSupervisor</url-pattern>    
        <url-pattern>/customerDataE</url-pattern>
        <url-pattern>/transf</url-pattern>
        <url-pattern>/transfert</url-pattern>
        <url-pattern>/updateC</url-pattern>
        <url-pattern>/updateE</url-pattern>

    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
